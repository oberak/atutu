<!doctype html>
<html lang="zxx">
<head>
    <% include ../partial/head.ejs %>
</head>
<body >

    <div id="wrapper" class="wrapper">

        <!-- BEGIN HEADER -->
        <% include ../partial/header.ejs %>
        <!-- END HEADER -->

        <!-- BEGIN SEARCH -->
        <div class="site-search">
            <div class="site-search-inner">
                <div class="container">
                    <form class="site-search-form">
                        <h2>Looking for something?</h2>
                        <div class="input-group">
                            <input class="form-control" type="search" required>
                            <span class="input-group-btn">
                                 <button type="submit" class="btn btn-primary">Search</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
            <button type="button" class="site-search-close-btn">×</button>
        </div>
        <!-- END SEARCH -->

        <!-- BEGIN MAIN CONTENT -->
        <main class="site-content">

<div class="container no-top-padding">
	<ol class="breadcrumb">
		<li><a href="#">Home</a></li>
		<li><a href="shop.html">Shop</a></li>
		<li class="active">Checkout</li>
	</ol>
	<header class="page-header">
		<h1>Buy point</h1>
	</header>
	<hr>
	<form class="checkout-form form-horizontal">
		<h2>Billing information</h2>
		<div class="form-group">
			<label class="col col-lg-3 col-md-2 control-label" for="name">User's bank account name<span class="required">*</span></label>
			<div class="col col-lg-9 col-md-10">
				<input type="text" name="bank_accname" id="bank_accname" class="form-control" placeholder="Ye Thu Aung" required>
			</div>
		</div>
    <div class="form-group">
			<label class="col col-lg-3 col-md-2 control-label" for="name">Transfer Amount<span class="required">*</span></label>
			<div class="col col-lg-9 col-md-10">
				<input type="number" name="trf_amt" id="trf_amt" class="form-control" value="2000" step="500" required>
			</div>
		</div>
    <div class="form-group">
			<label class="col col-lg-3 col-md-2 control-label" for="name">Transfer Date<span class="required">*</span></label>
			<div class="col col-lg-9 col-md-10">
				<input type="date" name="trf_date" id="trf_date" class="form-control" required>
			</div>
		</div>
    <div class="form-group">
			<label class="col col-lg-3 col-md-2 control-label" for="name">Atutu's Bank Account<span class="required">*</span></label>
			<div class="col col-lg-9 col-md-10">
					<select id="bank_name" name="bank_name" class="form-control selectpicker">
            	<option value="">Select a country…</option>
              <option value="AYA" >AYA Bank</option>
              <option value="CB" >CB Bank</option>
              <option value="KBZ" >KBZ Bank</option>
          </select>
			</div>
		</div>
    <div class="panel panel-info">
      <div class="panel-heading">
    <h3 class="text-center" id="set_acc">Please choice Atutu bank account<font class="bank_id"></font></h3>
  </div>
  </div>
		<hr>
		<div class="text-center">
			<button type="submit" class="btn btn-lg btn-primary">Place order</button>
		</div>
	</form>

</div>
        </main>
        <!-- END MAIN CONTENT -->

        <!-- BEGIN FOOTER -->
        <% include ../partial/footer.ejs %>
        <!-- END FOOTER -->

    </div>

    <!-- Gmaps API -->
    <script src="http://maps.google.com/maps/api/js"></script>
    <script src="/scripts/map-objects-data.js"></script>

    <!-- Plugins js -->
    <script src="/scripts/plugins.js"></script>

    <!-- Main js -->
    <script src="/scripts/main.js"></script>

</body>
<script type="text/javascript">
  $('#bank_name').change(function () {
    var branch = $('#bank_name').val();
    if(branch == 'AYA'){
      $('#set_acc').html("Atutu's AYA bank account is <p class='bank_id'><font color = 'red'> 0909090900</font></p>&nbsp&nbsp&nbsp&nbsp<a href='javascript:copy();'><i class='fa fa-copy'></i></a>");
    }else if (branch == 'CB') {
      $('#set_acc').html("Atutu's CB bank account is <font class='bank_id' color = 'green'>232323232323</font>&nbsp&nbsp&nbsp&nbsp<a href='javascript:copy();'><i class='fa fa-copy'></i></a>");
    }else if(branch == 'KBZ'){
      $('#set_acc').html("Atutu's KBZ bank account is <font class='bank_id' color = 'blue'>121212121212</font>&nbsp&nbsp&nbsp&nbsp<a href='javascript:copy();'><i class='fa fa-copy'></i></a>");
    }else {
      $('#set_acc').html("Please choice Atutu bank account" );
    }
    console.log($('font').html());
  });
  function copy() {
    console.log('copy it',$('.bank_id'));
    var copy_id = $('.bank_id').select();
    // copy_id.select();
    document.execCommand("copy");
  }
</script>
</html>
